<Window x:Class="toDoWpf.Remove"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:toDoWpf"
        mc:Ignorable="d"
        Title="Remove" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="368,28,25,114"/>
        <Label Content="Remove Activity" HorizontalAlignment="Left" Margin="26,28,0,0" VerticalAlignment="Top" Height="38" Width="190" FontSize="18"/>
        <Label Content="Enter Id:" HorizontalAlignment="Left" Margin="26,96,0,0" VerticalAlignment="Top" Height="43" Width="76" FontSize="16"/>
        <TextBox x:Name="Id" HorizontalAlignment="Left" Margin="172,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" RenderTransformOrigin="0.084,-0.41" Height="39"/>
        <Button x:Name="remove" Content="Remove" HorizontalAlignment="Left" Margin="79,217,0,0" VerticalAlignment="Top" Height="46" Width="137" Click="remove_Click"/>
        <Button x:Name="viewData" Content="View Data" HorizontalAlignment="Left" Margin="79,300,0,0" VerticalAlignment="Top" Height="41" Width="137" Click="viewData_Click"/>

    </Grid>
</Window>
